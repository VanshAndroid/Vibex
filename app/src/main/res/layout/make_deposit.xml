<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <include
        android:id="@+id/headerView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/header"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginLeft="@dimen/big_margin"
        android:layout_marginRight="@dimen/big_margin"
        android:text="@string/make_deposit"
        android:gravity="center"
        android:textColor="@color/black_light"
        android:textSize="@dimen/text_size_normal"
        android:fontFamily="@font/sailec_medium"
        android:padding="@dimen/medium_margin"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_white_box_card"
        android:layout_marginTop="@dimen/big_margin"
        android:layout_marginRight="@dimen/very_big_margin"
        android:layout_marginLeft="@dimen/very_big_margin"
        android:layout_marginBottom="@dimen/big_margin"
        android:orientation="vertical"
        android:gravity="center"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_margin"
            android:text="Make a deposit using this reference"
            android:gravity="center"
            android:textColor="@color/black_light"
            android:textSize="@dimen/text_size_small"
            android:fontFamily="@font/sailec_regular"
            android:padding="@dimen/medium_margin"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:text="BX04NQN5S"
            android:gravity="center"
            android:textColor="@color/primary_text_blue"
            android:textSize="@dimen/text_size_medium_large"
            android:fontFamily="@font/sailec_regular"
            android:padding="@dimen/medium_margin"
            android:layout_marginBottom="@dimen/big_margin"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/big_margin"
        android:gravity="center|top"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/big_margin"
            android:layout_marginRight="@dimen/big_margin"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vibex Payment Reference"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_gravity="center|left"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/sailec_regular"
                android:textColor="@color/primary_text_gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BX04NQN5S"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_gravity="center|right"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/sailec_regular"
                android:textColor="@color/primary_text_gray"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/big_margin"
            android:layout_marginRight="@dimen/big_margin"
            android:layout_marginTop="@dimen/big_margin"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_gravity="center|left"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/sailec_regular"
                android:textColor="@color/primary_text_gray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NGN 5000.00"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_gravity="center|right"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/sailec_regular"
                android:textColor="@color/primary_text_gray"
                />

        </FrameLayout>


        <TextView
            android:id="@+id/deposit_tv"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:text="I'VE MADE THE DEPOSIT"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal"
            android:layout_marginTop="@dimen/extra_large_margin"
            android:layout_marginRight="@dimen/extra_margin"
            android:layout_marginLeft="@dimen/extra_margin"
            android:gravity="center"
            android:background="@drawable/rounded_yellow_1"
            android:fontFamily="@font/sailec_medium"
            />

    </LinearLayout>

</LinearLayout>