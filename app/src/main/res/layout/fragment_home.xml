<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="125dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/gradient_theme"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="wrap_content"
                            android:visibility="visible"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/crypto_tv_n"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_gravity="center"
                            android:textSize="@dimen/text_size_medium_large"
                            android:textColor="@color/white"
                            android:visibility="visible"
                            />


                    </FrameLayout>


                    <TextView
                        android:id="@+id/crypto_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BTC 0.00"
                        android:textSize="@dimen/text_size_medium_large"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/totalamount_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small"

                        />

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/big_margin_x"
                android:layout_marginRight="@dimen/big_margin_x"
                android:orientation="horizontal"
                android:background="@drawable/rounded_gradient_yellow"
                >

                <LinearLayout
                    android:id="@+id/send"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_right_arrow_forward"
                        android:tint="@color/white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send"
                        android:textSize="@dimen/text_size_very_small"
                        android:layout_marginTop="@dimen/very_small_margin"
                        android:textColor="@color/white"
                        android:fontFamily="@font/sailec_regular"
                        />


                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_view"
                    />

                <LinearLayout
                    android:id="@+id/buy"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_bitcoin_logo"
                        android:tint="@color/white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buy"
                        android:textSize="@dimen/text_size_very_small"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/very_small_margin"
                        android:fontFamily="@font/sailec_regular"
                        />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_view"
                    />

                <LinearLayout
                    android:id="@+id/deposit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_wallet"
                        android:tint="@color/white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deposit"
                        android:textSize="@dimen/text_size_very_small"
                        android:textColor="@color/white"
                        android:layout_marginTop="@dimen/very_small_margin"
                        android:fontFamily="@font/sailec_regular"
                        />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient_view"
                    />
                <LinearLayout
                    android:id="@+id/moreOption"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_menu_dot"
                        android:tint="@color/white"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More"
                        android:textSize="@dimen/text_size_very_small"
                        android:layout_marginTop="@dimen/very_small_margin"
                        android:textColor="@color/white"
                        android:fontFamily="@font/sailec_regular"
                        />

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>



        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <FrameLayout
                    android:id="@+id/container_doc_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/container_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/container_layout_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/big_margin_x"
                    android:layout_marginRight="@dimen/big_margin_x"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_marginBottom="@dimen/big_margin"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Social Media"
                        android:padding="@dimen/small_margin"
                        android:textColor="@color/gray_dark"
                        android:layout_gravity="center|left"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="@font/sailec_regular"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right|center"
                        android:id="@+id/social_sharing"
                        >

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/ic_instagram"
                            android:layout_margin="@dimen/small_margin"
                            />
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/ic_facebook"
                            android:layout_margin="@dimen/small_margin"
                            />
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/ic_twitter"
                            android:layout_margin="@dimen/small_margin"
                            />
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/ic_youtube"
                            android:layout_margin="@dimen/small_margin"
                            />
                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:background="@drawable/ic_whatsapp"
                            android:layout_margin="@dimen/small_margin"
                            />

                    </LinearLayout>

                </FrameLayout>


            </LinearLayout>


        </ScrollView>

        <FrameLayout
            android:id="@+id/menu_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

        </FrameLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/scanQr_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/big_margin"
        android:layout_marginBottom="@dimen/big_margin"
        android:src="@drawable/qr_scanner" />

</RelativeLayout>