<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="@dimen/big_margin_x"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        >

        <LinearLayout
            android:id="@+id/item_views"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/blog_content_pic"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/blockchain"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/big_margin"
                        />

                    <TextView
                        android:id="@+id/blog_content_subject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_frag_container2_text"
                        android:textColor="@color/primary_text_gray"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/small_margin"
                        android:fontFamily="@font/sailec_medium"
                        />

                    <TextView
                        android:id="@+id/blog_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home_frag_container2_text1"
                        android:textColor="@color/black_light"
                        android:textSize="@dimen/text_size_small"
                        android:layout_margin="@dimen/big_margin"
                        android:fontFamily="@font/sailec_regular"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:gravity="right"
                    android:padding="@dimen/medium_margin"
                    android:layout_marginBottom="@dimen/medium_margin"
                    >

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LEARN MORE"
                        android:textColor="@color/gray_dark"
                        android:textSize="@dimen/text_size_small"
                        android:layout_marginRight="@dimen/big_margin"
                        android:layout_gravity="center"
                        android:fontFamily="@font/sailec_medium"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INVITE FRIENDS"
                        android:textColor="@color/primary_text_blue"
                        android:textSize="@dimen/text_size_small"
                        android:layout_gravity="center|right"
                        android:layout_marginRight="@dimen/big_margin"
                        android:fontFamily="@font/sailec_medium"
                        />

                </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>