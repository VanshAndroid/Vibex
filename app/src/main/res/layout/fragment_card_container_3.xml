<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="@dimen/big_margin_x"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_card_white"
            android:elevation="2dp"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/big_margin"
                android:scaleType="fitXY"
                android:src="@drawable/building" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_frag_container2_text"
                android:textColor="@color/primary_text_blue"
                android:textSize="@dimen/text_size_normal"
                android:gravity="center"
                android:layout_marginTop="@dimen/small_margin"
                android:fontFamily="@font/sailec_medium"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_frag_container2_text1"
                android:textColor="@color/black_light"
                android:textSize="@dimen/text_size_small"
                android:layout_margin="@dimen/big_margin"
                android:fontFamily="@font/sailec_regular"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:gravity="right"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="READ MORE"
                android:textColor="@color/gray_dark"
                android:textSize="@dimen/text_size_small"
                android:layout_marginRight="@dimen/big_margin"
                android:layout_gravity="center"
                android:fontFamily="@font/sailec_medium"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW BLOG"
                android:textColor="@color/primary_text_blue"
                android:textSize="@dimen/text_size_small"
                android:fontFamily="@font/sailec_medium"
                android:layout_gravity="center|right"
                android:layout_marginRight="@dimen/big_margin"
                />


        </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>