<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:background="@drawable/gradient_theme"
        >
        <ImageView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:src="@drawable/vibex_x"
            android:layout_marginBottom="20dp"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/vibex_wallet"
                android:textColor="@color/primary_text_blue"
                android:layout_marginTop="@dimen/very_big_margin"
                android:layout_marginLeft="@dimen/extra_margin"
                android:layout_marginRight="@dimen/extra_margin"
                android:textSize="@dimen/text_size_extra_large"
                android:fontFamily="@font/sailec_regular"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/very_big_margin"
                android:layout_marginRight="@dimen/very_big_margin"
                android:layout_marginTop="@dimen/very_big_margin"
                android:text="@string/vibex_wallet_text"
                android:textColor="@color/primary_text_gray"
                android:textSize="@dimen/text_size_normal"
                android:gravity="center"
                android:fontFamily="@font/sailec_regular"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wallet_bg"

                />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/continue_fram"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:layout_gravity="center"
                android:textColor="@color/primary_text_blue"
                android:textSize="@dimen/text_size_normal"
                android:fontFamily="@font/sailec_regular"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_forward_blue_24dp"
                android:layout_gravity="center|right"
                android:padding="@dimen/medium_margin"
                android:layout_marginRight="@dimen/big_margin"
                />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>
