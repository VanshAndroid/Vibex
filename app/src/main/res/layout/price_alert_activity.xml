<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <include
        android:id="@+id/headerView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/header_2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/very_big_margin"
        android:layout_marginRight="@dimen/big_margin_x"
        android:layout_marginLeft="@dimen/big_margin_x"
        >

        <TextView
            android:id="@+id/email_hint_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sailec_regular"
            android:text="Enter Email Address"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_small"
            />

        <EditText
            android:id="@+id/email_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:drawableLeft="@drawable/bitcoin_icon"
            android:fontFamily="@font/sailec_regular"
            android:inputType="textEmailAddress"
            android:padding="@dimen/small_margin"
            android:paddingLeft="@dimen/small_margin"
            android:singleLine="true"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:id="@+id/email_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@color/dark_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/big_margin"
            android:text="Alert me"
            android:textColor="@color/black_light_x"
            />


    </LinearLayout>

</LinearLayout>