<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/extra_margin"
        >

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_white_24dp"
            android:padding="@dimen/small_margin"
            android:layout_marginTop="@dimen/big_margin"
            android:layout_marginLeft="@dimen/big_margin"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_phone_book"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Almost there!"
                android:textSize="32sp"
                android:textColor="@color/white"
                android:fontFamily="@font/sailec_medium"
                android:layout_marginTop="@dimen/big_margin_x"
                />

            <TextView
                android:id="@+id/content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/verify_identity"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/sailec_regular"
                android:layout_marginTop="@dimen/big_margin"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btn_done"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom|center"
            android:background="@drawable/rounded_box_white"
            android:layout_marginLeft="@dimen/extra_margin"
            android:layout_marginRight="@dimen/extra_margin"
            android:text="VERIFY IDENTITY"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/light_black"
            android:fontFamily="@font/sailec_medium"
            />

    </FrameLayout>

</LinearLayout>