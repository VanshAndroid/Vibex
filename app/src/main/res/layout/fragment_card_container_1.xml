<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="@dimen/big_margin_x"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/rounded_card"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="left|top"
                android:layout_margin="@dimen/big_margin"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bitcoin Price"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_normal"
                    android:fontFamily="@font/sailec_medium"
                    />

                <TextView
                    android:fontFamily="@font/sailec_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7 days. updated a miniute ago "
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_very_small_xx"
                    android:visibility="gone"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right|top"
                android:layout_margin="@dimen/big_margin"
                android:visibility="gone"
                android:background="@drawable/rounded_white"
                >

                <TextView
                    android:fontFamily="@font/sailec_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BTC/NGN"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_very_small"
                    android:layout_marginLeft="@dimen/medium_margin"
                    />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/yellow_drop_down"
                    android:layout_gravity="right|center"
                    android:tint="@color/colorPrimary"
                    android:layout_marginLeft="@dimen/big_margin"
                    android:layout_marginRight="@dimen/small_margin"
                    />

            </LinearLayout>


            <TextView
                android:fontFamily="@font/sailec_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.76%"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:layout_marginLeft="@dimen/medium_margin"
                android:layout_gravity="right|bottom"
                android:layout_margin="@dimen/big_margin"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/crypto_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:layout_margin="@dimen/big_margin"
                android:layout_marginLeft="@dimen/medium_margin"
                android:fontFamily="@font/sailec_medium"

                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy Bitcoin"
                android:textColor="@color/primary_text_blue"
                android:textSize="@dimen/text_size_small"
                android:layout_gravity="center|right"
                android:layout_marginRight="@dimen/big_margin"
                android:fontFamily="@font/sailec_medium"
                />

            <TextView
                android:id="@+id/sell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/small_margin"
                android:fontFamily="@font/sailec_medium"
                android:text="Sell Bitcoin"
                android:textColor="@color/primary_text_blue"
                android:textSize="@dimen/text_size_small" />

        </FrameLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>