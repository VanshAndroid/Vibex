<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BTC"
        android:gravity="center"
        android:layout_marginTop="@dimen/big_margin"
        android:textColor="@color/primary_text_gray"
        android:fontFamily="@font/sailec_medium"
        android:textSize="@dimen/text_size_medium"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Price"
            android:padding="@dimen/medium_margin"
            android:fontFamily="@font/sailec_regular"
            android:textColor="@color/primary_text_gray"
            />

        <TextView
            android:id="@+id/tv_amt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Amount"
            android:padding="@dimen/medium_margin"
            android:fontFamily="@font/sailec_regular"
            android:textColor="@color/primary_text_gray"
            />



        <TextView
            android:id="@+id/tv_price1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Price"
            android:padding="@dimen/medium_margin"
            android:fontFamily="@font/sailec_regular"
            android:textColor="@color/primary_text_gray"
            />

        <TextView
            android:id="@+id/tv_amt1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Amount"
            android:padding="@dimen/medium_margin"
            android:fontFamily="@font/sailec_regular"
            android:textColor="@color/primary_text_gray"
            />


    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_order_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />


        <ImageView
            android:id="@+id/exchange_sell_buy"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:src="@drawable/plus"
            android:layout_marginRight="@dimen/extra_margin"
            android:layout_marginBottom="@dimen/extra_margin"
            />
    </FrameLayout>



</LinearLayout>