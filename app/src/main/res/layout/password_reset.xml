<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/headerView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/header"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/extra_large_margin"
        android:layout_marginLeft="@dimen/big_margin"
        android:layout_marginRight="@dimen/big_margin"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/extra_large_margin"
            android:gravity="center"
            android:text="Create your new Password"
            android:textSize="@dimen/text_size_medium"
            android:fontFamily="@font/sailec_regular"
            android:textColor="@color/primary_text_gray"
            />

        <TextView
            android:id="@+id/password_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sailec_regular"
            android:text="Enter Password"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_small"

            />

        <EditText
            android:id="@+id/password_ed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_password_dark_gray_24dp"
            android:fontFamily="@font/sailec_regular"
            android:inputType="textPassword"
            android:padding="@dimen/small_margin"
            android:paddingLeft="@dimen/small_margin"
            android:singleLine="true"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:id="@+id/password_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@color/dark_gray" />

        <TextView
            android:id="@+id/password_tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:fontFamily="@font/sailec_regular"
            android:text="Confirm Password"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_small" />

        <EditText
            android:id="@+id/password_ed1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_password_dark_gray_24dp"
            android:fontFamily="@font/sailec_regular"
            android:inputType="textPassword"
            android:padding="@dimen/small_margin"
            android:paddingLeft="@dimen/small_margin"
            android:singleLine="true"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:id="@+id/password_view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/small_margin"
            android:background="@color/dark_gray" />

        <Button
            android:id="@+id/reset_pwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/big_margin_x"
            android:layout_marginTop="@dimen/medium_margin"
            android:background="@drawable/rounded_box_blue"
            android:fontFamily="@font/sailec_medium"
            android:gravity="center"
            android:text="Reset Password"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small" />


    </LinearLayout>

    </ScrollView>

</LinearLayout>