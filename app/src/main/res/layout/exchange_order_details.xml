<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/headerView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/header"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/big_margin"
            android:layout_marginRight="@dimen/big_margin"
            >

            <TextView
                android:id="@+id/cryptoRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buy at NGN 45000"
                android:gravity="center"
                android:layout_marginTop="@dimen/extra_margin"
                android:textColor="@color/light_black"
                android:fontFamily="@font/sailec_regular"
                android:textSize="@dimen/text_size_small"
                />

            <TextView
                android:id="@+id/crypto_val"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BTC 0.000100"
                android:gravity="center"
                android:layout_marginTop="@dimen/small_margin"
                android:textColor="@color/primary_text_gray"
                android:fontFamily="@font/sailec_regular"
                android:textSize="@dimen/text_size_small"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_white_box_border"
                android:layout_marginTop="@dimen/big_margin"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:padding="@dimen/medium_margin"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="State"
                        android:padding="@dimen/small_margin"
                        android:textColor="@color/primary_text_blue"
                        android:fontFamily="@font/sailec_regular"
                        android:textSize="@dimen/text_size_small"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Created"
                        android:textColor="@color/primary_text_blue"
                        android:padding="@dimen/small_margin"
                        android:fontFamily="@font/sailec_regular"
                        android:layout_marginTop="@dimen/big_margin"
                        android:textSize="@dimen/text_size_small"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type"
                        android:textColor="@color/primary_text_blue"
                        android:fontFamily="@font/sailec_regular"
                        android:padding="@dimen/small_margin"
                        android:layout_marginTop="@dimen/big_margin"
                        android:textSize="@dimen/text_size_small"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fill"
                        android:textColor="@color/primary_text_blue"
                        android:fontFamily="@font/sailec_regular"
                        android:layout_marginTop="@dimen/big_margin"
                        android:textSize="@dimen/text_size_small"
                        android:padding="@dimen/small_margin"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Value"
                        android:textColor="@color/primary_text_blue"
                        android:fontFamily="@font/sailec_regular"
                        android:layout_marginTop="@dimen/big_margin"
                        android:textSize="@dimen/text_size_small"
                        android:padding="@dimen/small_margin"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fee"
                        android:textColor="@color/primary_text_blue"
                        android:fontFamily="@font/sailec_regular"
                        android:layout_marginTop="@dimen/big_margin"
                        android:textSize="@dimen/text_size_small"
                        android:padding="@dimen/small_margin"
                        />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/big_margin"
                    android:layout_marginBottom="@dimen/medium_margin"
                    android:background="#E7E7E7"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="5"
                    android:orientation="vertical"
                    android:padding="@dimen/medium_margin"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:padding="@dimen/small_margin"
                        android:textColor="@color/light_black"
                        android:fontFamily="@font/sailec_regular"
                        android:textSize="@dimen/text_size_small"
                        />

                    <TextView
                        android:id="@+id/order_timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:padding="@dimen/small_margin"
                        android:fontFamily="@font/sailec_regular"
                        android:lines="1"
                        android:layout_marginTop="@dimen/big_margin"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/light_black"
                        />
                    <TextView
                        android:id="@+id/trx_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/light_black"
                        android:fontFamily="@font/sailec_regular"
                        android:padding="@dimen/small_margin"
                        android:layout_marginTop="@dimen/big_margin"
                        android:textSize="@dimen/text_size_small"
                        />

                    <TextView
                        android:id="@+id/crypto_closing_traded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/sailec_regular"
                        android:layout_marginTop="@dimen/big_margin"
                        android:textSize="@dimen/text_size_small"
                        android:padding="@dimen/small_margin"
                        android:textColor="@color/light_black"
                        />

                    <TextView
                        android:id="@+id/crypto_closing_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/light_black"
                        android:fontFamily="@font/sailec_regular"
                        android:layout_marginTop="@dimen/big_margin"
                        android:textSize="@dimen/text_size_small"
                        android:padding="@dimen/small_margin"
                        />

                    <TextView
                        android:id="@+id/fees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/light_black"
                        android:fontFamily="@font/sailec_regular"
                        android:layout_marginTop="@dimen/big_margin"
                        android:textSize="@dimen/text_size_small"
                        android:padding="@dimen/small_margin"
                        />




                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/big_margin"
                android:layout_marginTop="@dimen/extra_margin"
                >



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/cancel_btn"
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:text="STOP"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="@font/sailec_regular"
                        android:background="@drawable/rounded_box_blue"
                        />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</LinearLayout>