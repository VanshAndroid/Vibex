<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <include
        android:id="@+id/headerView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/header"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/big_margin_x"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forgot_pwd"
                android:gravity="center"
                android:fontFamily="@font/sailec_regular"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/primary_text_gray"
                android:layout_marginTop="@dimen/big_margin"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/extra_large_margin"
                android:layout_marginLeft="@dimen/small_margin"
                android:layout_marginRight="@dimen/small_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/email_hint_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sailec_regular"
                    android:text="Enter Email Address"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_size_small"

                    />

                <EditText
                    android:id="@+id/email_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/ic_email_dark_gray_24dp"
                    android:fontFamily="@font/sailec_regular"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/small_margin"
                    android:paddingLeft="@dimen/small_margin"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_size_normal" />

                <View
                    android:id="@+id/email_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/small_margin"
                    android:background="@color/dark_gray" />

                <TextView
                    android:id="@+id/resetPwd_tv"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/very_big_margin"
                    android:background="@drawable/rounded_box_blue"
                    android:fontFamily="@font/sailec_medium"
                    android:gravity="center"
                    android:text="RESET PASSWORD"
                    android:layout_marginBottom="@dimen/extra_margin"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>