<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:background="@drawable/gradient_theme"
            >
            <ImageView
                android:id="@+id/back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:padding="@dimen/small_margin"
                android:layout_marginLeft="@dimen/big_margin"
                android:layout_marginTop="@dimen/big_margin"
                />

            <TextView
                android:id="@+id/headerText_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/extra_large_margin"
                android:layout_marginRight="@dimen/big_margin"
                android:layout_marginTop="@dimen/small_margin"
                android:fontFamily="@font/sailec_regular"
                android:gravity="center"
                android:padding="@dimen/medium_margin"
                android:text="@string/send_txt"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom|center"
            android:layout_marginLeft="@dimen/big_margin_x"
            android:layout_marginRight="@dimen/big_margin_x"
            android:gravity="center"
            android:elevation="2dp"
            >

            <ImageView
                android:id="@+id/next_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/arrow_send"
                android:layout_gravity="center|right"
                android:layout_marginRight="@dimen/big_margin"
                />

        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/big_margin_x"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="From wallet"
            android:layout_marginLeft="@dimen/big_margin_x"
            android:textSize="@dimen/text_size_medium"
            android:fontFamily="@font/sailec_regular"
            android:textColor="@color/black_light_x"
            android:drawableRight="@drawable/dropdown"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_margin"
            android:layout_marginLeft="@dimen/big_margin_x"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/bitcoin_logo"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="@dimen/big_margin"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BTC Wallet"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BTC 0.00"
                    />

            </LinearLayout>


        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/extra_large_margin"
            android:hint="Note(Optional)"
            />

    </LinearLayout>

</LinearLayout>