<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/extra_margin"
            android:src="@mipmap/ic_bitcoin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/very_big_margin"
            android:fontFamily="@font/sailec_regular"
            android:gravity="center"
            android:text="@string/invite_txt"
            android:textColor="@color/primary_text_gray"
            android:layout_marginLeft="@dimen/big_margin_x"
            android:layout_marginRight="@dimen/big_margin_x"
            android:textSize="@dimen/text_size_normal" />

        <Button
            android:id="@+id/invite_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="@dimen/big_margin_x"
            android:layout_marginLeft="@dimen/extra_large_margin"
            android:layout_marginRight="@dimen/extra_large_margin"
            android:layout_marginTop="@dimen/big_margin_x"
            android:background="@drawable/rounded_box_blue"
            android:fontFamily="@font/sailec_medium"
            android:text="INVITE FRIENDS"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sailec_regular"
            android:text="Your invition code:"
            android:textColor="@color/primary_text_gray"
            android:textSize="@dimen/text_size_normal" />


        <TextView
            android:id="@+id/invitationCode_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sailec_medium"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_extra_large"
            android:layout_marginTop="@dimen/small_margin"
            />


    </LinearLayout>

</LinearLayout>