<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <include
        android:id="@+id/headerView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/header"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/big_margin_x"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please provide as much information as possible"
                android:textSize="@dimen/text_size_medium"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/very_big_margin"
                android:layout_marginBottom="@dimen/very_big_margin"
                android:gravity="center"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/email_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/small_margin"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/sailec_regular"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/small_margin"
                    android:paddingLeft="@dimen/small_margin"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_size_normal"
                    android:hint="Select category"
                    />

                <View
                    android:id="@+id/email_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/small_margin"
                    android:background="@color/dark_gray" />


                <EditText
                    android:id="@+id/password_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_margin"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/sailec_regular"
                    android:padding="@dimen/small_margin"
                    android:paddingLeft="@dimen/small_margin"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_size_normal"
                    android:hint="Subject"
                    />

                <View
                    android:id="@+id/password_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/small_margin"
                    android:background="@color/dark_gray" />


                <EditText
                    android:id="@+id/description_ed"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/sailec_regular"
                    android:padding="@dimen/small_margin"
                    android:paddingLeft="@dimen/small_margin"
                    android:singleLine="true"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/text_size_normal"
                    android:hint="Description"
                    android:gravity="left"
                    android:layout_marginTop="@dimen/extra_margin"
                    />
                <View
                    android:id="@+id/desc_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/small_margin"
                    android:background="@color/dark_gray" />

                <TextView
                    android:id="@+id/attach_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/extra_margin"
                    android:background="@android:color/transparent"
                    android:fontFamily="@font/sailec_regular"
                    android:padding="@dimen/small_margin"
                    android:paddingLeft="@dimen/small_margin"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_normal"
                    android:text="Attach files"
                    android:drawableRight="@drawable/ic_attachment_24dp"
                    />

                <View
                    android:id="@+id/attach_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/small_margin"
                    android:background="@color/dark_gray" />

                <Button
                    android:id="@+id/signup_tv"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/big_margin_x"
                    android:layout_marginTop="@dimen/medium_margin"
                    android:background="@drawable/rounded_box_blue"
                    android:fontFamily="@font/sailec_regular"
                    android:gravity="center"
                    android:text="SEND"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small" />


            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>